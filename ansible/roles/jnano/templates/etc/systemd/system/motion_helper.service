[Unit]
Description = Motion NVR Helper
# systemctl list-units --type=mount # to list mount 'services' as a dependecy
After=network.service mnt-motion_data.mount
Wants=network-online.target

[Service]
User=andre
Group=www-data
Restart=always
ExecStart=/usr/bin/motion_helper.py -d /mnt/motion_data -s /home/andre -m {{ motion_storage_size }}
RestartSec=900
# 15 minutes to restart in crazy failures on booting

[Install]
WantedBy=multi-user.target

